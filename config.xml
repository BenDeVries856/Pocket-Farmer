<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devries.pocketfarmer" version="1.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://colorgame.bendevries.com/ns/1.0">
    <name>Pocket Farmer</name>
    <description>
        Farm and collect various different plant and animal species and harvest
        there drops to craft new animals.
    </description>
    <author email="dev@cordova.apache.org" href="www.colorgame.com">
        Ben DeVries Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="www/icons/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="www/icons/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="www/icons/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="www/icons/android/icon-96-xhdpi.png" />
    </platform>
    <platform name="ios">
        <icon height="180" src="www/icons/ios/icon-60-3x.png" width="180" />
        <icon height="60" src="www/icons/ios/icon-60.png" width="60" />
        <icon height="120" src="www/icons/ios/icon-60-2x.png" width="120" />
        <icon height="76" src="www/icons/ios/icon-76.png" width="76" />
        <icon height="152" src="www/icons/ios/icon-76-2x.png" width="152" />
        <icon height="40" src="www/icons/ios/icon-40.png" width="40" />
        <icon height="80" src="www/icons/ios/icon-40-2x.png" width="80" />
        <icon height="57" src="www/icons/ios/icon-57.png" width="57" />
        <icon height="114" src="www/icons/ios/icon-57-2x.png" width="114" />
        <icon height="72" src="www/icons/ios/icon-72.png" width="72" />
        <icon height="144" src="www/icons/ios/icon-72-2x.png" width="144" />
        <icon height="29" src="www/icons/ios/icon-small.png" width="29" />
        <icon height="58" src="www/icons/ios/icon-small-2x.png" width="58" />
        <icon height="50" src="www/icons/ios/icon-50.png" width="50" />
        <icon height="100" src="www/icons/ios/icon-50-2x.png" width="100" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-sqlite-storage" spec="^2.0.4" />
</widget>
